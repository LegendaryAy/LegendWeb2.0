@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel
<section id="hero">
    <div class="hero-container">
        <h1 class="animate__animated animate__backInDown">Ayobami Fadeni</h1>
        <h2 class="animate__animated animate__backInLeft animate__delay-1s">I'm a Senior FullStack Software Engineer </h2>
        <a href="#about" class="hero-btn animate__animated animate__fadeIn animate__delay-2s"> More </a>
    </div>
</section><!-- End Hero -->

<section id="about" class="about">
    <div class="container mobile-container" data-aos="fade-up" data-aos-once="true">
        <div class="section-title">
            <h2>About</h2>
            <div class="underline"></div>
            <p class="text-lg-center font-italic">"A good programmer is someone who always looks both ways before crossing a one-way street"</p>
            <p>- Doug Linder</p>
        </div>

        <div class="row">
            <div class="image col-lg-4 d-flex align-items-stretch justify-content-center justify-content-lg-start" data-aos="fade-right" data-aos-once="true"></div>
            <div class="col-lg-8 pt-4 pt-lg-0 content">
                <h3>@Model.Job</h3>
                <p class="font-italic">
                    @Model.Bio
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Birthday:</strong> @Model.DateOfBirth</li>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Education:</strong> @Model.Education</li>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Phone:</strong> @Model.PhoneNumber</li>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>City:</strong> @Model.City</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Email:</strong> @Model.Email</li>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Degree:</strong> @Model.Degree</li>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Gender:</strong> @Model.Gender</li>
                            <li><i class="fa fa-angle-double-right"></i>  <strong>Work Status:</strong> @Model.WorkStatus</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Button -->
            <a href="https://docs.google.com/document/d/1Lm1A2IERudDjpOEymsfB0NipMHnGwMu7/edit?usp=sharing&ouid=103583238599733273549&rtpof=true&sd=true" target="_blank" class="resume-btn">
                Check My Resume
            </a>
        </div>

    </div>
</section><!-- End About Section -->

<section id="services" class="services">
    <div class="container mobile-container" data-aos="fade-down" data-aos-once="true">

        <div class="section-title">
            <h2>My Services</h2>
            <p class="text-lg-center font-italic">"Any fool can write code that a computer can understand. Good programmers write code that humans can understand."</p>
            <p>- Martin Fowler</p>
        </div>

        <div class="row">
            <div class="col-md-6 col-lg-4 d-flex align-items-stretch mb-5 mb-lg-0">
                <div class="icon-box">
                    <div class="icon"><img src="~/images/dev.svg" alt="web-dev"></div>
                    <h4 class="title">Backend Development</h4>
                    <p class="description">Whether it's developing enterprise APIs with C# ASP.NET Web API Core, crafting lightweight services with Node.js and Express.js, or building modular applications with Nest.js, I am committed to delivering high-quality backend solutions that drive business growth and enhance user experiences.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 d-flex align-items-stretch mb-5 mb-lg-0">
                <div class="icon-box">
                    <div class="icon"><img src="~/images/product.svg" alt="product"></div>
                    <h4 class="title">Frontend Development</h4>
                    <p class="description">You'll find examples of my frontend projects below showcasing my proficiency in HTML, CSS, Sass, React, and jQuery. From sleek and intuitive user interfaces to dynamic and interactive web applications, I am dedicated to delivering high-quality frontend solutions that meet client requirements and exceed user expectations.</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 d-flex align-items-stretch mb-5 mb-lg-0">
                <div class="icon-box">
                    <div class="icon"><img src="~/images/content.svg" alt="content-dev"></div>
                    <h4 class="title">Database Architeture and Management </h4>
                    <p class="description">I have created multiple database architectures and implementations across different instances of MSSQL, MySQL, PostgreSQL, and MongoDB. From relational databases to NoSQL solutions, I am dedicated to designing and optimizing database systems that support the needs of diverse applications and drive business success</p>
                </div>
            </div>

        </div>

    </div>
</section><!-- End My Services Section -->

<section id="exp" class="exp">
    <div class="container mobile-container" data-aos="fade-down" data-aos-once="true">

        <div class="section-title">
            <h2>Experience</h2>
            <p class="text-lg-center font-italic">"Simplicity, carried to the extreme, becomes elegance"</p>
            <p>- Jon Franklin</p>
        </div>

        @foreach (var exp in Model.Experiences)
        {

            <div class="card">
                <div class="exp-head">
                    <img src="@exp.Logo" alt="@exp.Company" />
                    <p><span>@exp.Company</span>, @exp.Location  (@exp.Date)</p>

                </div>
                <ul class="exp-ul">
                    @foreach (var i in exp.Description)
                    {
                        <li class="exp-list"><i class="fa fa-angle-double-right"></i>   @i.Description</li>
                    }
                </ul>
            </div>
        }

    </div>
</section><!-- End Experience Section -->

<section id="skills" class="skills">
    <div class="container mobile-container" data-aos="fade-left" data-aos-once="true">
        <div class="section-title">
            <h2>Skills</h2>
            <p class="text-lg-center font-italic">"Before software should be reusable, it should be usable."</p>
            <p>- Ralph Johnson</p>
        </div>
        <div class="prog-skills">
            <img src="~/images/html.png" alt="Html" />
            <img src="~/images/css.png" alt="Css" />
            <img src="~/images/javascript.png" alt="JavaScript" />
            <img src="~/images/C-sharp.png" alt="C#" />
            <img src="~/images/NET_Core_Logo.png" alt=".Net" />
            <img src="~/images/microsoft_sql_server.png" alt="MSSQL" />
            <img src="~/images/Bootstrap.png" alt="Bootstrap" />
            <img src="~/images/react.png" alt="React" />
            <img src="~/images/PHP.png" alt="php" />
            <img src="~/images/mysql.png" alt="mySql" />
            <img src="~/images/posgres (2).png" alt="Posgres" />
            <img src="~/images/node.png" alt="node" />
            <img src="~/images/nestjs.png" alt="nest" />
            <img src="~/images/mongodb.png" alt="mongodb" />
            <img src="~/images/sass.png" alt="Sass" />
            <img src="~/images/docker.png" alt="docker" />
            <img src="~/images/Azure.png" alt="Azure" />
            <img src="~/images/github.png" alt="github" />
        </div>
    </div>

</section> <!-- End Skills Section -->

<section id="projects" class="projects">
    <div class="container mobile-container" data-aos="fade-right" data-aos-once="true">
        <div class="section-title">
            <h2>Projects</h2>
            <p class="text-lg-center font-italic">"That’s the thing about people who think they hate computers. What they really hate is lousy programmers."</p>
            <p>- Larry Niven</p>
        </div>
        <div class="works">
            @foreach (var project in Model.Projects)
            {
                <div class="card" style="width: 22rem;">
                    <img class="card-img-top" src=~/@project.ImageUrl alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text">@project.Body</p>
                        <a href=@project.Url class="btn">Show More..</a>
                    </div>
                </div>
            }

        </div>
        <div class="github"><a href="https://github.com/LegendaryAy" class="btn">Check my Github Profile...</a></div>
    </div>
</section>

<!-- End Projects Section -->

<section id="cert" class="cert">
    <div class="container mobile-container" data-aos="fade-up" data-aos-once="true">
        <div class="section-title">
            <h2>Certifications</h2>
            <p class="text-lg-center font-italic">"A computer once beat me at chess, but it was no match for me at kickboxing."</p>
            <p>- Emo Philips</p>
        </div>
        <div class="works">
            @foreach (var cert in Model.Certifications)
            {
                <div class="card" style="width: 22rem;">
                    <img class="card-img-top" src=~/@cert.ImageUrl alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@cert.Name</h5>
                        <p class="card-text">Issued By: @cert.Issuer</p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<!-- End Certification Section -->
